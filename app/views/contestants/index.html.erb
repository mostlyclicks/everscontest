<h1>Contestants</h1>
<h3>Number of entries: <%= @contestants.count %></h3>
<% if @winner %>
    <h4>And the winner is... <%= @winner.first_name.capitalize + ' ' + @winner.last_name.capitalize + ' - ' + @winner.email %></h4>
<% end %>
<table class="table table-striped">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>City</th>
    <th>Country</th>
    <th>State</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Gender</th>
    <th>Age range</th>
    <th>Newsletter</th>
    <th>Rules</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% @contestants.each do |contestant| %>
  <tr>
    <td><%= contestant.first_name %></td>
    <td><%= contestant.last_name %></td>
    <td><%= contestant.city %></td>
    <td><%= contestant.country %></td>
    <td><%= contestant.state %></td>
    <td><%= contestant.phone %></td>
    <td><%= contestant.email %></td>
    <td><%= contestant.gender %></td>
    <td><%= contestant.age %></td>
    <td><%= contestant.newsletter %></td>
    <td><%= contestant.rules %></td>
    <td><%= link_to 'Show', contestant %></td>
    <td><%= link_to 'Edit', edit_contestant_path(contestant) %></td>
    <td><%= link_to 'Destroy', contestant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Contestant', new_contestant_path %>
